<div class="row mt-5">
    <div class="col-md-4">

        <div class="card shadow-sm">
            <div class="card-header bg-primary text-white">
                <h5 class="mb-0">Roles</h5>
            </div>

            <div class="card-body p-0">
                <table class="table table-striped mb-0 align-middle">
                    <tbody>
                        @foreach (var item in Model)
                        {
                            <tr>
                                <td class="fw-semibold ps-3">
                                    @item.RoleName
                                </td>
                                <td class="text-end pe-3">
                                    @if (User.IsInRole("Manager"))
                                    {
                                        <form asp-action="Delete" asp-controller="Role" method="post"
                                              style="display:inline;">
                                            @Html.AntiForgeryToken()                                        
                                            <input type="hidden" name="roleName" value="@item.RoleName" />
                                            <button type="submit" class="btn btn-outline-danger"
                                                    onclick="return confirm('Are you sure you want to delete this role?');">
                                                <i class="bi bi-trash"></i> Delete
                                            </button>
                                        </form>
                                     }
                                    else
                                    {
                                        <button class="btn btn-outline-danger btn-sm" disabled title="Only Managers can delete roles">
                                            <i class="bi bi-lock"></i> Delete
                                        </button>
                                    }
                                </td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>
        </div>

    </div>
</div>
